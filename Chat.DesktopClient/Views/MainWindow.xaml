<Window x:Class="Chat.DesktopClient.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Label Height="300" Width="500" Content="{Binding Output, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></Label>
            <TextBox Height="50" Width="500" Text="{Binding Message}"></TextBox>
            <Button Height="50" Width="500" Content="Send Message" Command="{Binding SendMessageCommand}"></Button>
        </StackPanel>
    </Grid>
</Window>
